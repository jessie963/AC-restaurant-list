{{!-- Search Bar --}}
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">

      {{!-- 搜尋表單 --}}
      <form action="/restaurants">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <select name="searchType" class="search-type-option">
            <option value="all" {{selected.all}}>搜尋全文</option>
            <option value="name" {{selected.name}}>搜尋餐廳名稱</option>
            <option value="category" {{selected.category}}>搜尋餐廳類別</option>
          </select>
          <input type="text" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." aria-describedby="search-button" name="keyword" value="{{keyword}}">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>

    </div>
  </div>
</div>

{{!-- Restaurant List --}}
<div class="container mt-5">

  {{#if restaurants.length}}
    {{!-- 第一次進首頁or搜尋有結果就顯示出餐廳 --}}
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="row row-cols-sm-3">
          {{#each restaurants as |restaurant|}}
          <a href="/restaurants/{{restaurant.id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{restaurant.image}}"
                alt="{{restaurant.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{restaurant.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{restaurant.category}}
                </div>
                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{restaurant.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>
          </a>
          {{/each}}
        </div>
      </div>
    </div>
  {{else}}
    {{!-- 若搜尋沒有對應結果則顯示提示訊息 --}}
    <h2 class="text-center">沒有搜尋到相關的餐廳</h2>
  {{/if}}

</div>
